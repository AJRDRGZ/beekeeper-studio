{
  "name": "bks-root",
  "version": "1.0.0",
  "repository": "git@github.com:beekeeper-studio/beekeeper-studio.git",
  "author": "Matthew Rathbone <matthew.rathbone@gmail.com>",
  "license": "MIT",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "scripts": {
    "bks:build": "yarn run workspace beekeeper-studio electron:build",
    "bks:dev": "yarn run workspace beekeeper-studio electron:serve",
    "components:build": "yarn run workspace components build",
    "components:dev": "yarn run workspace components dev",
    "sqltools:build": "yarn run workspace sqltools build",
    "sqltools:dev": "yarn run workspace sqltools serve",
    
    "electron:build": "npm-run-all components:build bks:build",
    "electron:serve": "run-p components:dev bks:dev",
    "web:serve": "run-p components:dev sqltools:dev"

  },
  "devDependencies": {
    "npm-run-all": "^4.1.5"
  }
}
